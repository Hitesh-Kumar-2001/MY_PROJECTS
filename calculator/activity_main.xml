<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context=".MainActivity"

    >

    <TextView
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#0c46f2"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#0c46f2"
        android:layout_below="@id/input"
        />

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input"
        android:layout_centerInParent="true"
        android:layout_marginBottom="0dp">



        <Button
            android:id="@+id/buttonAC"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#00E60B0B"
            android:text="AC"
            android:textColor="#0c46f2"
            android:textSize="15sp"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/buttonback"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/buttonAC"
            android:background="#00E60B0B"
            android:text="âŒ«"
            android:textColor="#0c46f2"
            android:textSize="15sp"
            android:textStyle="bold"

            />



        <Button
            android:id="@+id/buttonplus"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/buttonback"
            android:background="#00E60B0B"
            android:text="+"
            android:textColor="#0c46f2"
            android:textSize="20sp"
            android:textStyle="bold"

            />
        <Button
            android:id="@+id/buttonminus"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/buttonplus"
            android:background="#00E60B0B"
            android:text="-"
            android:textColor="#0c46f2"
            android:textSize="20sp"
            android:textStyle="bold"

            />
        <Button
            android:id="@+id/button1"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/buttonAC"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#00E60B0B"
            android:text="1"
            android:textColor="#131313"
            android:textSize="20sp"
            android:textStyle="bold"

            />
        <Button
            android:id="@+id/button2"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@id/button1"
            android:layout_below="@id/buttonback"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#00E60B0B"
            android:text="2"
            android:textColor="#131313"
            android:textSize="20sp"
            android:textStyle="bold"

            />
        <Button
            android:id="@+id/button3"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@id/button2"
            android:layout_below="@id/buttonplus"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#00E60B0B"
            android:text="3"
            android:textColor="#131313"
            android:textSize="20sp"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/buttonmultiply"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_below="@id/buttonminus"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/button3"
            android:background="#00E60B0B"
            android:text="X"
            android:textColor="#0c46f2"
            android:textSize="15sp"
            android:textStyle="bold"

            />
        <Button
            android:id="@+id/button4"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/button1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#00E60B0B"
            android:text="4"
            android:textColor="#131313"
            android:textSize="20sp"
            android:textStyle="bold"

            />
        <Button
            android:id="@+id/button5"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@id/button4"
            android:layout_below="@id/button2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#00E60B0B"
            android:text="5"
            android:textColor="#131313"
            android:textSize="20sp"
            android:textStyle="bold"

            />
        <Button
            android:id="@+id/button6"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@id/button5"
            android:layout_below="@id/button2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#00E60B0B"
            android:text="6"
            android:textColor="#131313"
            android:textSize="20sp"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/buttondivide"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_below="@id/buttonmultiply"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/button6"
            android:background="#00E60B0B"
            android:text="/"
            android:textColor="#0c46f2"
            android:textSize="20sp"
            android:textStyle="bold"

            />
        <Button
            android:id="@+id/button7"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/button4"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#00E60B0B"
            android:text="7"
            android:textColor="#131313"
            android:textSize="20sp"
            android:textStyle="bold"

            />
        <Button
            android:id="@+id/button8"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@id/button7"
            android:layout_below="@id/button5"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#00E60B0B"
            android:text="8"
            android:textColor="#131313"
            android:textSize="20sp"
            android:textStyle="bold"

            />
        <Button
            android:id="@+id/button9"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@id/button8"
            android:layout_below="@id/button6"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#00E60B0B"
            android:text="9"
            android:textColor="#131313"
            android:textSize="20sp"
            android:textStyle="bold"

            />
        <Button
            android:id="@+id/buttonequal"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_below="@id/buttondivide"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/button9"
            android:background="#00E60B0B"
            android:text="="
            android:textColor="#0c46f2"
            android:textSize="30sp"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/buttonsquare"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/button7"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#00E60B0B"
            android:text="sq"
            android:textColor="#0c46f2"

            android:textStyle="bold"

            />
        <Button
            android:id="@+id/button0"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@id/buttonsquare"
            android:layout_below="@id/button8"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#00E60B0B"
            android:text="0"
            android:textColor="#131313"
            android:textSize="20sp"
            android:textStyle="bold"

            />
        <Button
            android:id="@+id/buttonpoint"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@id/button0"
            android:layout_below="@id/button9"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#00E60B0B"
            android:text="."
            android:textColor="#131313"
            android:textSize="30sp"
            android:textStyle="bold"

            />
        <Button
            android:id="@+id/buttonmodulas"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_below="@id/buttonequal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/buttonpoint"
            android:background="#00E60B0B"
            android:text="%"
            android:textColor="#0c46f2"
            android:textSize="30sp"
            android:textStyle="bold"

            />


    </RelativeLayout>






</RelativeLayout>
